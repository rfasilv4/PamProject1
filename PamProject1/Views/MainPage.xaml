<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PamProject1.Views.MainPage"
             Title="AlvilioFit"
             Background="Black">



    <VerticalStackLayout Spacing="20" Padding="40" VerticalOptions="Center">
        <Image Source="https://cdn-icons-png.flaticon.com/512/2307/2307827.png" HeightRequest="120" HorizontalOptions="Center"/>
        <Entry Placeholder="Login" BackgroundColor="White" TextColor="Black"/>
        <Entry Placeholder="Senha" IsPassword="True" BackgroundColor="White" TextColor="Black" />
        <Button Text="Entrar" 
        BackgroundColor="Black" 
        TextColor="White" 
        BorderWidth="1" 
        BorderColor="White"
        Clicked="OnEntrarClicked"/>
    </VerticalStackLayout>
</ContentPage>